{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "HyperianLang",
  "scopeName": "source.hyperianlang",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#function-def" },
    { "include": "#function-call" },
    { "include": "#event-block" },
    { "include": "#control-flow" },
    { "include": "#declarations" },
    { "include": "#html-keywords" },
    { "include": "#css-keywords" },
    { "include": "#actions" },
    { "include": "#operators" },
    { "include": "#numbers" },
    { "include": "#constants" },
    { "include": "#prepositions" },
    { "include": "#articles" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.hyperianlang",
          "match": "#.*$"
        },
        {
          "name": "comment.line.double-slash.hyperianlang",
          "match": "//.*$"
        },
        {
          "name": "comment.block.hyperianlang",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": { "name": "punctuation.definition.comment.hyperianlang" }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.hyperianlang",
          "begin": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.hyperianlang" }
          },
          "end": "\"",
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.hyperianlang" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.hyperianlang",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.hyperianlang",
          "begin": "'",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.hyperianlang" }
          },
          "end": "'",
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.hyperianlang" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.hyperianlang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "function-def": {
      "patterns": [
        {
          "name": "meta.function.hyperianlang",
          "match": "\\b(define)\\s+(function)\\s+(\"[^\"]+\")",
          "captures": {
            "1": { "name": "storage.type.function.hyperianlang" },
            "2": { "name": "storage.type.function.hyperianlang" },
            "3": { "name": "entity.name.function.hyperianlang" }
          }
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "name": "meta.function-call.hyperianlang",
          "match": "\\b(call)\\s+(function)\\s+(\"[^\"]+\")",
          "captures": {
            "1": { "name": "keyword.control.hyperianlang" },
            "2": { "name": "storage.type.function.hyperianlang" },
            "3": { "name": "entity.name.function.hyperianlang" }
          }
        }
      ]
    },
    "event-block": {
      "patterns": [
        {
          "name": "meta.event.hyperianlang",
          "match": "\\b(when)\\s+(.+?)\\s+(then)\\b",
          "captures": {
            "1": { "name": "keyword.control.event.hyperianlang" },
            "2": { "name": "variable.other.event.hyperianlang" },
            "3": { "name": "keyword.control.hyperianlang" }
          }
        }
      ]
    },
    "control-flow": {
      "patterns": [
        {
          "name": "keyword.control.hyperianlang",
          "match": "\\b(if|else|otherwise|then|end|repeat|while|do|for|try|catch|finally|break|skip|return|match|on|each|every)\\b"
        },
        {
          "name": "keyword.control.flow.hyperianlang",
          "match": "\\b(when|where|default)\\b"
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "name": "meta.declaration.hyperianlang",
          "match": "\\b(let)\\b",
          "captures": {
            "1": { "name": "storage.type.hyperianlang" }
          }
        },
        {
          "name": "storage.modifier.hyperianlang",
          "match": "\\b(define|function|class|method|constructor|property|static|private|public|extends|inherit|new|super)\\b"
        },
        {
          "name": "keyword.other.module.hyperianlang",
          "match": "\\b(import|export|from|as|require)\\b"
        },
        {
          "name": "keyword.control.async.hyperianlang",
          "match": "\\b(async|await|promise|resolve|reject)\\b"
        }
      ]
    },
    "actions": {
      "patterns": [
        {
          "name": "support.function.builtin.hyperianlang",
          "match": "\\b(set|increase|decrease|print|call|create|check)\\b"
        },
        {
          "name": "support.function.game.hyperianlang",
          "match": "\\b(move|play|stop|spawn|destroy|show|hide|wait|emit|teleport|freeze|unfreeze|apply|say|choice|battle|attack|add|remove|toggle|load|win|lose|restart|save|give|take|turn|open|shake|flash|tint|equip|heal|grant|recover|change|learn|forget|delete|deal|restore|drain)\\b"
        },
        {
          "name": "support.function.data.hyperianlang",
          "match": "\\b(append|fetch|post|parse|stringify|read|write|split|replace|convert|count|round|floor|ceil|abs|sqrt|min|max|random|join|trim|uppercase|lowercase|sort|reverse|filter|merge|flatten|get|index|slice|find|clamp|log|exit|run|pad|sign|type|copy|assign|length|size|list|object|map|string|number|boolean|array)\\b"
        },
        {
          "name": "support.function.array.hyperianlang",
          "match": "\\b(transform|reduce|every|any|spread|extract)\\b"
        },
        {
          "name": "support.function.path.hyperianlang",
          "match": "\\b(basename|dirname|extname|path)\\b"
        },
        {
          "name": "support.function.server.hyperianlang",
          "match": "\\b(serve|respond|listen|start|send|receives|request|server|port|connect|disconnect|broadcast|file|body|parameters|status)\\b"
        },
        {
          "name": "support.function.crypto.hyperianlang",
          "match": "\\b(hash|encrypt|decrypt|encode|decode|buffer)\\b"
        },
        {
          "name": "support.function.regex.hyperianlang",
          "match": "\\b(regex|pattern|test|matches|capture)\\b"
        },
        {
          "name": "support.function.error.hyperianlang",
          "match": "\\b(throw|raise|error|safely)\\b"
        },
        {
          "name": "support.function.database.hyperianlang",
          "match": "\\b(query|insert|update|select)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.hyperianlang",
          "match": "\\b(equals|greater|less|than|not|is)\\b"
        },
        {
          "name": "keyword.operator.logical.hyperianlang",
          "match": "\\b(and|or)\\b"
        },
        {
          "name": "keyword.operator.arithmetic.word.hyperianlang",
          "match": "\\b(plus|minus|times|multiplied|divided)\\b"
        },
        {
          "name": "keyword.operator.arithmetic.hyperianlang",
          "match": "(\\+|\\-|\\*|\\/|%)"
        },
        {
          "name": "keyword.operator.comparison.symbol.hyperianlang",
          "match": "(<=|>=|==|!=|<|>)"
        },
        {
          "name": "keyword.operator.assignment.hyperianlang",
          "match": "="
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.hyperianlang",
          "match": "\\b-?\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.hyperianlang",
          "match": "\\b-?\\d+\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.hyperianlang",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.hyperianlang",
          "match": "\\b(null|undefined|nothing|empty)\\b"
        },
        {
          "name": "support.constant.math.hyperianlang",
          "match": "\\b(math)\\s+(pi|e)\\b"
        }
      ]
    },
    "prepositions": {
      "patterns": [
        {
          "name": "keyword.other.preposition.hyperianlang",
          "match": "\\b(to|by|at|from|with|of|in|into|starting|ending|containing|using|called|named|be)\\b"
        },
        {
          "name": "keyword.other.unit.hyperianlang",
          "match": "\\b(times|seconds|frames|fps|milliseconds)\\b"
        }
      ]
    },
    "articles": {
      "patterns": [
        {
          "name": "punctuation.definition.article.hyperianlang",
          "match": "\\b(the|a|an)\\b"
        }
      ]
    },
    "html-keywords": {
      "patterns": [
        {
          "name": "entity.name.tag.hyperianlang",
          "match": "\\b(html)\\b"
        },
        {
          "name": "entity.name.tag.structure.hyperianlang",
          "match": "\\b(page|head|body|div|span|section|article|header|footer|nav|main|aside)\\b"
        },
        {
          "name": "entity.name.tag.text.hyperianlang",
          "match": "\\b(heading|paragraph|bold|strong|italic|emphasis|code|preformatted|quote|blockquote)\\b"
        },
        {
          "name": "entity.name.tag.form.hyperianlang",
          "match": "\\b(form|input|button|label|textarea|select|option|formgroup|grouptitle|result|optiongroup)\\b"
        },
        {
          "name": "entity.name.tag.media.hyperianlang",
          "match": "\\b(image|video|audio|iframe|canvas|svg|illustration|figcaption|responsive|mediasource|captions|subtitles)\\b"
        },
        {
          "name": "entity.name.tag.list.hyperianlang",
          "match": "\\b(list|item|ordered|unordered|table|row|cell|columns|column|headerrows|bodyrows|footerrows|tablecaption)\\b"
        },
        {
          "name": "entity.name.tag.semantic.hyperianlang",
          "match": "\\b(link|meta|title|script|style|stylesheet|charset|viewport)\\b"
        },
        {
          "name": "entity.name.tag.interactive.hyperianlang",
          "match": "\\b(modal|popup|expandable|disclosure|summary|suggestions|blueprint|placeholder)\\b"
        },
        {
          "name": "entity.name.tag.formatting.hyperianlang",
          "match": "\\b(highlighted|subscript|superscript|abbreviation|deleted|inserted|strikethrough|underline|fineprint|citation)\\b"
        },
        {
          "name": "entity.name.tag.misc.hyperianlang",
          "match": "\\b(progressbar|gauge|datetime|annotation|pronunciation|fallback|imagemap|clickable|isolate|direction|wordbreak|softbreak)\\b"
        },
        {
          "name": "entity.name.tag.document.hyperianlang",
          "match": "\\b(nojs|baseurl|machinevalue|contact|definition|keyboard|sample|variable|horizontal|break|line)\\b"
        },
        {
          "name": "entity.name.tag.embed.hyperianlang",
          "match": "\\b(embed|object|param)\\b"
        },
        {
          "name": "support.constant.attribute.hyperianlang",
          "match": "\\b(controls|autoplay|loop|muted|poster|width|height|open)\\b"
        }
      ]
    },
    "css-keywords": {
      "patterns": [
        {
          "name": "entity.name.tag.css.hyperianlang",
          "match": "\\b(css|stylesheet|styling)\\b"
        },
        {
          "name": "entity.name.tag.css.rule.hyperianlang",
          "match": "\\b(rule|selector|select|class|identifier)\\b"
        },
        {
          "name": "entity.name.tag.css.media.hyperianlang",
          "match": "\\b(media|responsive|breakpoint|keyframes|animation|animate|fontface|font)\\b"
        },
        {
          "name": "support.type.property-name.css.hyperianlang",
          "match": "\\b(background|bgcolor|backgroundcolor|color|textcolor|fontsize|fontweight|fontstyle|fontfamily)\\b"
        },
        {
          "name": "support.type.property-name.css.hyperianlang",
          "match": "\\b(textdecoration|textalign|lineheight|letterspacing|wordspacing|textoverflow|texttransform)\\b"
        },
        {
          "name": "support.type.property-name.css.hyperianlang",
          "match": "\\b(margin|margintop|marginbottom|marginleft|marginright|padding|paddingtop|paddingbottom|paddingleft|paddingright)\\b"
        },
        {
          "name": "support.type.property-name.css.hyperianlang",
          "match": "\\b(border|bordertop|borderbottom|borderleft|borderright|borderwidth|bordercolor|borderstyle|borderradius)\\b"
        },
        {
          "name": "support.type.property-name.css.hyperianlang",
          "match": "\\b(display|position|top|bottom|left|right|zindex|overflow|overflowx|overflowy|visibility|opacity)\\b"
        },
        {
          "name": "support.type.property-name.css.hyperianlang",
          "match": "\\b(flex|flexdirection|flexwrap|justifycontent|alignitems|alignself|aligncontent|flexgrow|flexshrink|flexbasis)\\b"
        },
        {
          "name": "support.type.property-name.css.hyperianlang",
          "match": "\\b(grid|gridtemplate|gridtemplatecolumns|gridtemplaterows|gridcolumn|gridrow|gap|rowgap|columngap)\\b"
        },
        {
          "name": "support.type.property-name.css.hyperianlang",
          "match": "\\b(transform|transition|boxshadow|textshadow|filter|backdropfilter)\\b"
        },
        {
          "name": "support.type.property-name.css.hyperianlang",
          "match": "\\b(cursor|float|clear|minwidth|maxwidth|minheight|maxheight|objectfit|objectposition|whitespace)\\b"
        },
        {
          "name": "keyword.other.css.hyperianlang",
          "match": "\\b(use|property|prop|variable|var|inline|frame|step|source|src|weight)\\b"
        }
      ]
    }
  }
}
