{
  "name": "hyperianlang",
  "displayName": "HyperianLang",
  "description": "Natural English-style scripting language with syntax highlighting, snippets, and code intelligence",
  "version": "1.0.0",
  "publisher": "kennethhy",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "hyperianlang",
    "english",
    "scripting",
    "natural language",
    "game scripting"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kennethhy/hyperianlang"
  },
  "contributes": {
    "languages": [
      {
        "id": "hyperianlang",
        "aliases": ["HyperianLang", "hl", "Hyperian"],
        "extensions": [".hl", ".es"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/hl-file.svg",
          "dark": "./icons/hl-file.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "hyperianlang",
        "scopeName": "source.hyperianlang",
        "path": "./syntaxes/hyperianlang.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "hyperianlang",
        "path": "./snippets/hyperianlang.json"
      }
    ],
    "themes": [
      {
        "label": "HyperianLang Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/hyperianlang-dark.json"
      }
    ],
    "configurationDefaults": {
      "[hyperianlang]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.wordWrap": "on",
        "editor.semanticHighlighting.enabled": true
      }
    }
  }
}
